<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Kolam Renang - Data Pengunjung</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <header class="bg-primary text-light py-5 text-center">
    <h1>Data Pengunjung Kolam Renang</h1>
  </header>

  <main class="container my-5">
    <h2 class="text-center mb-4">Data Pengunjung</h2>
    <table class="table table-bordered table-hover shadow">
      <thead class="table-primary">
        <tr>
          <th>ID</th>
          <th>Nama</th>
          <th>Jumlah Pengunjung</th>
          <th>Aksi</th>
        </tr>
      </thead>
      <tbody>
        <% if (pengunjung.length > 0) { %>
          <% pengunjung.forEach((data) => { %>
            <tr>
              <td><%= data.id %></td>
              <td><%= data.nama %></td>
              <td><%= data.jumlah_pengunjung %></td>
              <td>
                <a href="/edit/<%= data.id %>" class="btn btn-warning btn-sm">Edit</a>
                <form action="/delete/<%= data.id %>" method="POST" class="d-inline">
                  <button class="btn btn-danger btn-sm" type="submit">Hapus</button>
                </form>
              </td>
            </tr>
          <% }); %>
        <% } else { %>
          <tr>
            <td colspan="4" class="text-center">Tidak ada data pengunjung.</td>
          </tr>
        <% } %>
      </tbody>
    </table>

    <h2 class="text-center mt-5">Tambah Data Pengunjung</h2>
    <form action="/add" method="POST" class="p-4 border shadow">
      <div class="mb-3">
        <label for="nama" class="form-label">Nama</label>
        <input type="text" id="nama" name="nama" class="form-control" required>
      </div>
      <div class="mb-3">
        <label for="jumlah" class="form-label">Jumlah Pengunjung</label>
        <input type="number" id="jumlah" name="jumlah_pengunjung" class="form-control" required>
      </div>
      <button type="submit" class="btn btn-primary">Tambah Data</button>
    </form>
  </main>
</body>
</html>
